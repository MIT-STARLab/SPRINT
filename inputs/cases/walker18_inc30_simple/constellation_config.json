                    "orbit2": ["S12","S13","S14","S15","S16","S17"]
                },
                "sat_orbital_elems": [
                    {
                        "sat_id_prefix": "S",
                        "sat_ids": "synthesize,range_inclusive,0,18",
                        "def_type": "walker",
                        "walker": {
                            "num_sats": 18,
                            "i_deg": 30,
                            "num_planes": 3,
                            "f_relative_spacing": 1,
                            "a_km": 6978,
                            "RAAN_p1_deg": 0,
                            "M_p1_deg": 0
                        },
                        "propagation_method": "matlab_delkep"
                    }
                ]
            }
        }

    }


